{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "lib": ["es2020"],
    "rootDir": "src",
    "outDir": "lib",
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "composite": true,
    // TODO(aomarks) skipLibCheck is temporarily true because the @actions/cache
    // dependency is missing the file "lib/internal/contracts.d.ts". We hit this
    // because we import directly from "lib/internal". See
    // https://github.com/google/wireit/issues/107 for details.
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": []
}
