{
  "name": "wireit",
  "private": true,
  "version": "0.0.0",
  "description": "Upgrade your npm scripts to make them smarter and more efficient",
  "author": "Google LLC",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/google/wireit.git"
  },
  "type": "module",
  "bin": {
    "wireit": "bin/wireit.js"
  },
  "files": [
    "bin/wireit.js",
    "lib/**/*.js",
    "!lib/test/**"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "wireit",
    "lint": "eslint .",
    "format": "prettier . -w",
    "format:check": "prettier . -c",
    "test": "wireit",
    "update-known-good": "npm run build && rm -f wireit-*.tgz && npm pack && mv wireit-*.tgz known-good.tgz && npm i -D known-good.tgz"
  },
  "wireit": {
    "build": {
      "command": "tsc --build --pretty",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "lib/**"
      ],
      "clean": false
    },
    "test": {
      "command": "uvu lib/test \"\\.test\\.js$\"",
      "dependencies": [
        "build"
      ],
      "files": [],
      "output": []
    }
  },
  "devDependencies": {
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "cmd-shim": "^4.1.0",
    "eslint": "^8.12.0",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3",
    "uvu": "^0.5.3",
    "wireit": "file:known-good.tgz"
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "fast-glob": "^3.2.11"
  }
}
